<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.miaxis.postal.util.ValueUtil" />

        <variable
            name="viewModel"
            type="com.miaxis.postal.viewModel.ConfigViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.ConfigFragment">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="设    置"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/iv_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="0dp"
            android:layout_height="@dimen/custom_toolbar_height"
            android:src="@drawable/ic_navigate_before_grey"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_blue"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="12dp"
            app:layout_constraintWidth_percent="0.15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/v_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/main_color"
            app:layout_constraintTop_toBottomOf="@id/iv_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ScrollView
            android:orientation="vertical"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_line"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View style="@style/HorizontalLine"/>

                <LinearLayout style="@style/SettingItem">

                    <View style="@style/VerticalLine"/>

                    <TextView style="@style/SettingName"
                        android:paddingEnd="1dp"
                        android:text="版本号" />

                    <View style="@style/VerticalLine"/>

                    <TextView style="@style/SettingBody"
                        android:id="@+id/tv_version"
                        android:layout_weight="1.5"
                        android:background="@color/white"
                        android:singleLine="true" />

                    <View style="@style/VerticalLine"/>

                    <TextView style="@style/SettingBody"
                        android:id="@+id/tv_check_update"
                        android:layout_weight="1"
                        android:background="@color/whitesmoke"
                        android:text="检查更新"
                        android:textColor="@color/main_color"
                        android:singleLine="true" />

                    <View style="@style/VerticalLine"/>

                </LinearLayout>

                <View style="@style/HorizontalLine"/>

                <LinearLayout style="@style/SettingItem">

                    <View style="@style/VerticalLine"/>

                    <TextView style="@style/SettingName"
                        android:text="IMEI" />

                    <View style="@style/VerticalLine"/>

                    <TextView style="@style/SettingBody"
                        android:id="@+id/tv_mac"
                        android:text="@{viewModel.config.deviceIMEI}"
                        android:background="@color/white"
                        android:singleLine="true" />

                    <View style="@style/VerticalLine"/>

                </LinearLayout>

                <View style="@style/HorizontalLine"/>

                <LinearLayout style="@style/SettingItem">

                    <View style="@style/VerticalLine"/>

                    <TextView style="@style/SettingName"
                        android:text="平台地址" />

                    <View style="@style/VerticalLine"/>

                    <EditText style="@style/SettingBody"
                        android:id="@+id/et_base_url"
                        android:text="@={viewModel.config.host}"
                        android:background="@color/white"
                        android:singleLine="true" />

                    <View style="@style/VerticalLine"/>

                </LinearLayout>

                <View style="@style/HorizontalLine"/>

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>