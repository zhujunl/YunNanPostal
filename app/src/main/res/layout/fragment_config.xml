<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.miaxis.postal.viewModel.ConfigViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.ConfigFragment">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="设    置"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/iv_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_navigate_before_grey"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="12dp"
            app:layout_constraintWidth_percent="0.15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_green"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="12dp"
            app:layout_constraintWidth_percent="0.15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/lightgrey"
            app:layout_constraintTop_toBottomOf="@id/iv_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_host"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="服务器地址："
            android:textSize="14sp"
            android:gravity="center"
            app:layout_constraintHeight_percent="0.075"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_back"/>

        <EditText
            android:id="@+id/iv_host"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="30dp"
            android:text="@={viewModel.config.host}"
            android:textSize="14sp"
            android:singleLine="true"
            app:layout_constraintTop_toTopOf="@id/tv_host"
            app:layout_constraintBottom_toBottomOf="@id/tv_host"
            app:layout_constraintStart_toEndOf="@id/tv_host"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_mac"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="物理地址："
            android:textSize="14sp"
            android:gravity="center"
            app:layout_constraintHeight_percent="0.075"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_host"/>

        <TextView
            android:id="@+id/iv_mac"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="30dp"
            android:text="@={viewModel.config.mac}"
            android:textSize="14sp"
            android:gravity="center|start"
            app:layout_constraintTop_toTopOf="@id/tv_mac"
            app:layout_constraintBottom_toBottomOf="@id/tv_mac"
            app:layout_constraintStart_toEndOf="@id/tv_mac"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>